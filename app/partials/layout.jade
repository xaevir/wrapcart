doctype html
html(ng-app='wrapApp')
  head
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='shortcut icon', href='/favicon.ico')
    title(ng-bind='title') WrapIt by Tish -  One versatile wrap creates a wardrobe of ideas!
    link(rel='stylesheet', href='/css/main.css')
  body(ng-controller='mainCtrl', ng-attr-id='{{pageId || 'none' }}')
    ng-include(src='viewNav()')
    ng-view
    include footer

    // @if NODE_ENV!='production'
    script(src='/bower_components/jquery/dist/jquery.js')
    script(src='/bower_components/angular/angular.js')
    script(src='/bower_components/angular-route/index.js')
    script(src='/app.js')
    script(src='/controllers/mainController.js')
    script(src='/controllers/buyController.js')
    script(src='/partials/templates.js')
    script(src='/bower_components/owl.carousel/dist/owl.carousel.js')
    script(src='/bower_components/fancybox/source/jquery.fancybox.js')
    script(src='/bower_components/fancybox/source/helpers/jquery.fancybox-media.js')
    // @endif

    // @if NODE_ENV!='production'
    script(src="/js/app.min.js")
    // @endif
    script.
      $("#owl-carousel").owlCarousel({
        items: 3,
        navigation : true
      });
